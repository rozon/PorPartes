@model ElCarro.Web.Models.ChangePasswordViewModel

<div class="row">
    <div class="input-field col s12">
        <i class="material-icons prefix">lock</i>
        <label>Cambiar contraseña</label>
    </div>
    <br /><br />

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "col s12" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("")

        <div class="row">
            <div class="input-field col s12">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "validate" })
                @Html.LabelFor(m => m.OldPassword)
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "validate" })
                @Html.LabelFor(m => m.NewPassword)
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "validate" })
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 center">
                <button class="btn waves-effect waves-light" type="submit" name="action">Cambiar</button>
            </div>
        </div>

    }
</div>