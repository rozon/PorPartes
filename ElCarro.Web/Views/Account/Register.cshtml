@model ElCarro.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Crea una cuenta</span>
                        <div class="row">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal col s12", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">perm_identity</i>
                                        @Html.TextBoxFor(m => m.FullName, new { @required = true })
                                        @Html.LabelFor(m => m.FullName, "Nombre")
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">email</i>
                                        @Html.TextBoxFor(m => m.Email, new { @required = true })
                                        @Html.LabelFor(m => m.Email, "Correo Electrónico")
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">lock</i>
                                        @Html.PasswordFor(m => m.Password, new { @required = true })
                                        @Html.LabelFor(m => m.Password, "Contraseña")
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">lock</i>
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @required = true })
                                        @Html.LabelFor(m => m.ConfirmPassword, "Verificar Contraseña")
                                    </div>
                                    <div class="col s12 center">
                                        <input type="checkbox" class="filled-in" id="PrivacyPolicy" name="PrivacyPolicy" value="true" />
                                        <label for="PrivacyPolicy">Acepto la <a class="modal-trigger" href="#privacy_policy">Política de privacidad</a> de ElCarro.do</label>
                                        <input type="hidden" id="PrivacyPolicy" name="PrivacyPolicy" value="false" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12 center">
                                        <button class="btn waves-effect waves-light" type="submit" name="Register">Registrarse</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">¿Ya tienes una cuenta?</span>
                    </div>
                    <div class="card-action">
                        <div class="row">
                            <div class="input-field col s12 center">
                                @Html.ActionLink("Iniciar sesión", "Login", "Account", htmlAttributes: new { @class = "waves-effect waves-light btn" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
